        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="-"
        android:textSize="@dimen/_25sdp"
        tools:ignore="HardcodedText" />

